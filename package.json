		"vite": "^5.4.8",
		"vitest": "^2.1.2"
	},
	"type": "module",
	"dependencies": {
		"@libsql/client": "^0.14.0",
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"arctic": "^1.9.2",
		"drizzle-orm": "^0.33.0",
		"drizzle-valibot": "0.2.0",
		"jsonwebtoken": "^9.0.2",
		"lucia": "^3.2.0",
		"nanoid": "^5.0.7",
		"remixicon": "^4.3.0",
		"valibot": "^0.42.1"
	}
